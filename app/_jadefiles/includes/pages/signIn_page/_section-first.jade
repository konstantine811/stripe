section.head-sign
    .head-sign__background
        .main-background.main-background--grey-second
    .container.container-lg
        .row
            include ../../_nav
        .row
            .head-sign-content
                .col-lg-9.col-md-8.col-sm-8.col-xs-12
                    .head-sign__title
                        h1 Sign in
                    .head-sign__txt-main
                        p.txt-main-title.
                            Sign in to ixLayer developer portal using your company credentials.
                        p.txt-main-title.
                            If you do not have credentials, please contact us at support@ixlayer.com for getting access to ixlayer API and integration documentation.
        .row
            .col-lg-12
                .section-second-sign-form
                    .section-second-sign-form__wrap
                        form.form-horizontal(action="")
                            .form-group
                                label(for="email" control-label).col-sm-4.label-input Your email
                                .col-sm-8
                                    input(type="email" id="email" placeholder="john.doe@example.com").form-control
                            .form-group
                                label(for="password" control-label).col-sm-4.label-input Password
                                .col-sm-8
                                    input(type="password" id="password" placeholder="password").form-control
                            .form-group-submit
                                .form-group-submit__wrap
                                    a(href="").bt.purple Sign in
            
